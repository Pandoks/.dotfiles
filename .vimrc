" --- Line Numbers ---
set relativenumber
set number

" --- Tabs & Indentation ---
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set nowrap

" --- Search ---
set ignorecase
set smartcase

" --- Cursor ---
set scrolloff=10

" --- Appearance ---
set termguicolors
set background=dark
set signcolumn=auto
set colorcolumn=100
set hlsearch

" --- System ---
set noswapfile
set nobackup
set undofile
set clipboard+=unnamed
